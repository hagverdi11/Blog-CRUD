@model BlogCreateVM 

@{
    ViewData["Title"] = "Create";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <span class="text-danger">@ViewBag.Message</span>
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <p class="card-description">
                            Blog
                        </p>
                        <form asp-controller="Blog" asp-action="Create" class="forms-sample" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="name">Title</label>
                                <input maxlength="" minlength="" type="text" class="form-control" asp-for="Title">
                                

                                <span class="text-danger my-1" asp-validation-for="Title"></span>
                            </div>

                            <div class="form-group">
                                <label for="name">Description</label>
                                <input maxlength="" minlength="" type="text" class="form-control" asp-for="Desc">
                                

                                <span class="text-danger my-1" asp-validation-for="Desc"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Photo">Photos</label>
                                <input class="form-control" asp-for="Photo">
                                <span asp-validation-for="Photo" class="text-danger my-1"></span>
                            </div>


                            <button type="submit" class="btn btn-primary mr-2">Submit</button>
                            <a asp-controller="Blog" asp-action="Index" class="btn btn-light">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

