@model BlogHeader

@{
    ViewData["Title"] = "Edit";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <span class="text-danger">@ViewBag.Message</span>
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <p class="card-description">
                            Blog Header
                        </p>
                        <form asp-controller="BlogHeader" asp-action="Edit" class="forms-sample" method="post">
                            <div class="form-group">
                                <label for="exampleInputUsername1">Header</label>
                                <input type="text" class="form-control" asp-for="Header">
                                <span class="text-danger my-1" asp-validation-for="Header"></span>
                            </div>

                            <div class="form-group">
                                <label for="exampleInputUsername1">Description</label>
                                <input type="text" class="form-control" asp-for="Description">
                                <span class="text-danger my-1" asp-validation-for="Description"></span>
                            </div>
                            <button type="submit" class="btn btn-primary mr-2">Submit</button>
                            <a asp-controller="BlogHeader" asp-action="Index" class="btn btn-light">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{

    <partial name="_ValidationPartial" />
}


