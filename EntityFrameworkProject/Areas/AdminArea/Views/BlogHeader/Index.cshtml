@model BlogHeader

@{
    ViewData["Title"] = "BlogHeader";
}


<div class="container-fluid my-3 mx-3">
    <div class="table-responsive pt-3">
     
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        Header
                    </th>
                    <th>
                        Description
                    </th>
                    <th style="text-align: center;">
                        Settings
                    </th>
                </tr>
            </thead>
            <tbody>
               
                <tr>
                    <td>
                        @Model.Header
                    </td>

                    <td>
                        @Model.Description
                    </td>
                    <td style="text-align: center;">
                     
                        <a class="btn btn-primary" asp-controller="BlogHeader" asp-action="Edit" asp-route-id="@Model.Id"><i class="mdi mdi-table-edit"></i></a>
                        
                    </td>
                </tr>
                


            </tbody>
        </table>
    </div>
</div>


